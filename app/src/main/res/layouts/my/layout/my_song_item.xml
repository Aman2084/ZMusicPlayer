<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:minHeight="45dp" android:layout_width="0dp" android:layout_height="45dp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/global_singleLineText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/global_singleLineText"
        android:textSize="10sp"
        android:layout_alignTop="@id/img"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="2dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        style="@style/global_singleLineText"
        android:background="@drawable/my_main_icon"
        android:layout_alignLeft="@id/txt_name"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="2dp"
        android:clickable="false"/>


    <LinearLayout
        android:id="@+id/core_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btn_fav"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/my_global_unfav"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_songlist_delete"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:button="@drawable/style_checkbox"
        android:visibility="gone"/>
</merge>