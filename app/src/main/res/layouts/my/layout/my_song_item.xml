<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:minHeight="60dp" android:layout_width="0dp" android:layout_height="60dp"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/global_singleLineText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        style="@style/global_singleLineText"
        android:background="@drawable/my_main_icon"
        android:layout_alignLeft="@id/txt_name"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="2dp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/txt_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/global_singleLineText"
        android:textSize="10sp"
        android:layout_alignTop="@id/img"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="2dp" />
</merge>