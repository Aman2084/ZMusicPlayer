<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView android:id="@+id/bg"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/alphaBlack"/>


    <com.zw.ui.containers.SubPageTitle
        android:id="@+id/title"
        style="@style/subPageTitle">
        <TextView
            android:id="@+id/txt_close"
            android:layout_width="46dp" android:layout_height="wrap_content"
            android:textColor="@color/white" android:textSize="18sp" android:textStyle="bold"
            android:text="@string/global_close" android:layout_marginRight="6dp"
            android:layout_centerInParent="true" android:layout_alignParentRight="true"/>
    </com.zw.ui.containers.SubPageTitle>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:divider="@color/gray"
        android:dividerHeight="0.6dp"
        android:scrollbars="none"
        android:layout_below="@+id/title"/>
</merge>